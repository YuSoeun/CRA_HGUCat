<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/button_design"
    android:layout_gravity="center"
    tools:context=".CameraCapture.SavePopup">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/SavePopupName">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="사진을 즉시 게시하겠습니까?"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="18dp"
            android:background="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SaveWay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SavePopupName"
        android:background="#F1EFEF"
        android:orientation="vertical"
        android:padding="24dp"
        android:textSize="20dp">

        <RadioGroup
            android:id="@+id/SaveChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1EFEF"
            android:gravity="center">

            <RadioButton
                android:id="@+id/SaveWay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:text="네"
                android:textColor="#000000"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/SaveWay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:text="아니요"
                android:textColor="#000000"
                android:textSize="18dp" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/SaveWay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="확인"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:onClick="onClose"/>

   </LinearLayout>

</RelativeLayout>