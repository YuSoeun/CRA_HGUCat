<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/button_design"
    tools:context=".CameraCapture.SavePopup">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/SavePopupName">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="어떤 항목에 추가하시겠습니까?"
            android:textColor="#000000"
            android:gravity="center"
            android:background="#CC6600" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@id/SavePopupName"
        android:id="@+id/SaveWay">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/SaveChoice"
            android:gravity="center" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SaveWay1"
                android:text = "갤러리"
                android:textSize="20dp"
                android:textColor = "#000000"
                android:padding = "24dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SaveWay2"
                android:text = "커뮤니티"
                android:textSize="20dp"
                android:textColor = "#000000"
                android:padding = "24dp" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/SaveWay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="확인"
            android:textColor="#000000"
            android:background="#BBBBBB"
            android:onClick="onClose"/>

   </LinearLayout>

</RelativeLayout>