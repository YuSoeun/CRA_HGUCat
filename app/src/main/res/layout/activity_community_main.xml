<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatCommunity.CommunityMain"
    android:background="@drawable/background">

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:onClick="AddCommunity"
        android:text="글 추가하기"
        android:fontFamily="@font/bmjua"
        android:background="@drawable/button_design"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/btn_add"
        android:layout_centerInParent="true" >

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id = "@+id/btn_cat_community"
        android:text="냥뮤니티"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:onClick="VisitCommunity"
        android:background="@drawable/button_design"
        android:fontFamily="@font/bmjua" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id = "@+id/btn_new_cat"
        android:text="새냥찾"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:onClick="VisitNewCat"
        android:background="@drawable/button_design"
        android:fontFamily="@font/bmjua" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id = "@+id/btn_request_fix"
        android:text="수정하라냥"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:onClick="VisitReqFix"
        android:background="@drawable/button_design"
        android:fontFamily="@font/bmjua" />

    </LinearLayout>

</RelativeLayout>