<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatCategory.CatInformation3"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="276dp"
            android:layout_height="242dp"
            android:layout_weight="1"
            android:src="@drawable/cat3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btncom"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="커뮤니티"
                android:background="@drawable/button_design"
                android:textColor="#000000"
                android:textSize="10dp"
                android:fontFamily="@font/bmjua" />

            <Button
                android:id="@+id/btninf"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="정보수정"
                android:background="@drawable/button_design"
                android:textColor="#666666"
                android:textSize="10dp"
                android:fontFamily="@font/bmjua"  />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below = "@id/linear">

    <TextView
        android:id="@+id/Textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\n짬뽕이\n\n\n맘스 2,3세대 엄마, 다산여왕\n\n암컷, 중성화 완료\n\n중성화 수술 후 학교에 돌아오는 길에\n\n포획틀을 뛰쳐나가 도망\n\n\n\n출처: 한동냥\n"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/bmjua" />

    </ScrollView>
</RelativeLayout>