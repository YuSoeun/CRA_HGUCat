<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatCategory.CatInformation2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="276dp"
            android:layout_height="242dp"
            android:layout_weight="1"
            android:src="@drawable/cat2_36dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btncom"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="커뮤니티"
                android:background="@drawable/button_design"
                android:textColor="#000000"
                android:textSize="10dp"
                android:fontFamily="@font/bmjua" />

            <Button
                android:id="@+id/btninf"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_weight="1"
                android:gravity="center"
                android:text="정보수정"
                android:background="@drawable/button_design"
                android:textColor="#000000"
                android:textSize="10dp"
                android:fontFamily="@font/bmjua" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below = "@id/linear">

        <TextView
            android:id="@+id/Textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n깡패\n\n\n맘스 2,3세대 아빠\n\n수컷, 중성화 완료\n\n2019-1학기 종강 이후 안보임 ㅠㅠ\n\n 나비랑 친했음! 간식 줄 때 손조심\n\n\n\n출처: 한동냥\n"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/bmjua" />

    </ScrollView>
</RelativeLayout>